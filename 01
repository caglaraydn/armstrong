#include "armstrong_numbers.h"
int power(int base,int exponent){
    int product = 1;
    int i = 0;

    for(i=0; i < exponent; i++){
        product = product + base;
    }

    return product;
}

int countDigits(int number){
    int x = 0;

    while(number > 10){
        number = number/10;
        x++;
    }

    int count = x + 1;

    return count;
}

bool is_armstrong_number(int candidate){
    int digits = countDigits(candidate);
    int t = 0;
    int q = 0;

    for(q = 0;q < digits; q++){
        int lastDigit = candidate % 10;
        candidate = candidate / 10;
        int resultPower = power(lastDigit, digits);
        t = t + resultPower;
            if(digits == 2){
                int lastDigit = candidate % 10;
                candidate = candidate / 10;
                int resultPower = power(lastDigit, digits);
                int resultPower2 = power(candidate, digits);
                t = t + resultPower + resultPower2;

                
                
            }
        
    }
    
    return t;
}





